<%= form_for @event, html: {class: 'form-horizontal'} do |f| %>
  <div class="col-md-6" style="padding:0rem 5rem 0rem 1rem;">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label 'Event Cover Image' %>
      <%= f.file_field :avatar, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :venue %>
      <%= f.collection_select :venue_id, Venue.all, :id, :name, {prompt: "Select a venue"} ,{class: "form-control"} %>
    </div>

    <div class="form-group">
      <%= f.label :city %>
      <%= f.collection_select :city_id, City.all, :id, :name, {prompt: "Select a city"} ,{class: "form-control"} %>
    </div>

    <div class="form-group">
      <a href="<%= events_path %>" class="btn btn-danger">Back</a>
    </div>
  </div>

  <div class="col-md-6" style="padding:0rem 5rem 0rem 1rem;">
    <div class="form-group">
  		<%= f.label "Starting at" %>
  	  <%= f.date_field :start_datetime, id: "startDatetime",class: 'form-control' %>
  	</div>

    <div class="form-group">
  		<%= f.label "Ending at" %>
  	  <%= f.date_field :end_datetime, id: "endDatetime",class: 'form-control' %>
  	</div>

    <div class="form-group">
      <%= f.label :entry_fee %>
      <%= f.select(:entry_fee, [250, 500, 750, 1000], {}, {:class => 'form-control'})%>
    </div>

    <div class="form-group">
      <%= f.label :category %>
      <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Select a category"}, {class: "form-control"} %>
    </div>

    <div class="form-group">
      <%= f.label :status %>
      <%= f.select(:status, ['New', 'On Going'], {}, {:class => 'form-control'})%>
    </div>

    <div class="form-group">
      <%= f.label 'Event Ticket Count' %>
      <%= f.select(:ticket_left, [200, 300, 400, 500], {}, {:class => 'form-control'})%>
    </div>

    <div class="form-group text-right">
      <%= f.submit 'Submit', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
